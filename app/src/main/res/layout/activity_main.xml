<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- ConstraintLayout with a blue background -->

    <!-- RelativeLayout with an ImageView as the background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".YourActivity">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contextClickable="true"

            android:scaleType="centerCrop"
            android:src="@drawable/draw4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="347dp"
            android:layout_height="69dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="595dp"
            android:text="@string/wlc"

            android:textAlignment="gravity"

            android:textColor="#9AFFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="77dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="27dp"
            android:onClick="nextActivity"
            android:text="get Started "
            android:textColorHighlight="#869EDA" />

        <!-- Your other layout components go here -->

    </RelativeLayout>

    <!-- Other views can be added here -->

</LinearLayout>



